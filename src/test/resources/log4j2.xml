<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">

<Properties>
<Property name="basePath">./logs</Property>
</Properties>

<Appenders>
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%d{HH:mm:ss.SSS] [%] %-5level %logger(36) - msgn"/>
</Console>

 <RollingFile name="File" fileName="logs/automation.log" filePattern="${basePath)/automation-%d{yyyy-MM-DD}">
<PatternLayout pattern = "%d{HH:mm:ss.555) (%t) %-51evel %logger (36) - %msg%n"/> 
<SizeBasedTriggeringPolicy size="50000" />
</RollingFile>


</Appenders>
<Loggers>
<Root level="Info"><!-- Here you can use multiple log levels All < Trace < Debug < Info< Warn < Error < Fata-->
 <AppenderRef ref="File"/> <!-- <AppenderRef ref="Console"/> -->
</Root>
</Loggers>
 </Configuration>